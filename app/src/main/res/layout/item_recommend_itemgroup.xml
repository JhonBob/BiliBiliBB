<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/container_title_item_group"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableLeft="@mipmap/hot_item_group"
            android:id="@+id/title_item_group"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:gravity="center_vertical"
            android:drawablePadding="3dp"
            android:text="热门推荐"
            android:textColor="@color/TextColorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="排行榜"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginRight="13dp"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:drawablePadding="2dp"
            android:id="@+id/enter_image_item_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/video_twin_item_group1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.bob.bilibilibb.View.VideoCardView
            android:id="@+id/card1_item_group"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="170dp">
        </com.bob.bilibilibb.View.VideoCardView>

        <com.bob.bilibilibb.View.VideoCardView
            android:id="@+id/card2_item_group"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="170dp">
        </com.bob.bilibilibb.View.VideoCardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_twin_item_group2"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.bob.bilibilibb.View.VideoCardView
            android:id="@+id/card3_item_group"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="170dp">
        </com.bob.bilibilibb.View.VideoCardView>

        <com.bob.bilibilibb.View.VideoCardView
            android:id="@+id/card4_item_group"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="170dp">
        </com.bob.bilibilibb.View.VideoCardView>
    </LinearLayout>

</LinearLayout>